def light(f,d,y,n,c,t,i):
    if (int(f[i+t])-int(f[i]))<d and y<n-1:
        t += 1
        y += 1
        c += 1
        light(f, d, y, n, c, t, i)
    return c


if __name__ == "__main__":
    c = 0
    n,d = map(int, input().split())
    f = input().split()
for i in range(0, n-1):
    t = 2
    y = 1
    light(f, d, y, n, c,t,i)
print(light(f, d, y, n, c,t,i))


